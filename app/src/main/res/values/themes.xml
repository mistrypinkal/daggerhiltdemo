<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaggerHiltDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorControlHighlight">@color/purple_200</item>
        <item name="colorOnSurface">@color/purple_200</item>


        <item name="android:background">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>

        <item name="android:textColorPrimary">@color/purple_200</item>
        <item name="android:textColorSecondary">@color/purple_200</item>
        <item name="android:textColorTertiary">@color/purple_200</item>
        <item name="android:textColorPrimaryInverse">@color/purple_200</item>
        <item name="android:textColorSecondaryInverse">@color/purple_200</item>
        <item name="android:textColorTertiaryInverse">@color/purple_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/mtrl_filled_stroke_color</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>


    <style name="ExposedDropdownMenuInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/mtrl_filled_stroke_color</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>


</resources>